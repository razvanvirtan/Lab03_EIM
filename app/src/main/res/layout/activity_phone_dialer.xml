<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Dialer"
            android:background="@color/teal_200"
            android:textColor="@color/black"></TextView>
        <EditText
            android:hint="phoneNumber"
            android:id="@+id/numberSpace"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="49dp"></EditText>

        <ImageButton
            android:contentDescription="remove"
            android:id="@+id/buttonRemove"
            android:layout_width="101dp"
            android:layout_height="76dp"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/remove"></ImageButton>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rowCount="5"
            android:columnCount="3">
            <Button
                android:id="@+id/button1"
                android:text="1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"></Button>

            <Button
                android:id="@+id/button2"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="2"></Button>

            <Button
                android:id="@+id/button3"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="3"></Button>

            <Button
                android:id="@+id/button4"
                android:text="4"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"></Button>

            <Button
                android:id="@+id/button5"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="5"></Button>

            <Button
                android:id="@+id/button6"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="6"></Button>

            <Button
                android:id="@+id/button7"
                android:text="7"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"></Button>

            <Button
                android:id="@+id/button8"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="8"></Button>

            <Button
                android:id="@+id/button9"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="9"></Button>

            <Button
                android:id="@+id/buttonStar"
                android:text="*"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="center"></Button>

            <Button
                android:id="@+id/button0"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="0"></Button>

            <Button
                android:id="@+id/buttonHashtag"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="#"></Button>

            <ImageButton
                android:id="@+id/buttonCall"
                android:layout_width="88dp"
                android:layout_height="73dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:src="@drawable/call"
                android:contentDescription="call"></ImageButton>

            <ImageButton
                android:contentDescription="rejected"
                android:id="@+id/buttonStop"
                android:layout_width="88dp"
                android:layout_height="73dp"
                android:layout_gravity="right"
                android:layout_row="4"
                android:layout_column="2"
                android:scaleType="fitXY"
                android:src="@drawable/rejected"></ImageButton>
        </GridLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
